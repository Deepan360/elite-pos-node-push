                error: function (error) {
                    console.error('Error:', error);

                    if (error.status === 0) {
                        alert('Failed to connect to the server. Check your server and network connection.');
                    } else {
                        alert('Failed to update customer. Check the console for more details.');
                    }
                }
            });
        });

