            cgst = (amount * taxRate / 200).toFixed(2);
            sgst = cgst;
            igst = 0;
        } else {
            cgst = 0;
            sgst = 0;
            igst = (amount * taxRate / 100).toFixed(2);
        }

        var totalTax = (parseInt(cgst) + parseInt(sgst) + parseInt(igst)).toFixed(2);

