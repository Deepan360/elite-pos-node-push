{{>header}}
<style>
  .content-left {
    text-align: center;
    padding: 20px;
  }

  .content-left h4 {
    font-size: 28px;
  }

  .content-left p {
    font-size: 16px;
  }

  /* Hiding the left side on mobile devices */
  @media (max-width: 991.98px) {
    .col-6 {
      display: none !important;
    }
  }

  /* Styling the login form for smaller screens */
  @media (max-width: 575.98px) {
    .card-plain {
      width: 100%;
      padding: 10px;
    }

    .card-header h4 {
      font-size: 24px;
    }

    .card-header p {
      font-size: 14px;
    }
  }
</style>

<main class="main-content mt-0">
  <section>
    <div class="page-header min-vh-100">
      <div class="container">
        <div class="row">
          <!-- Login Form (Visible on all screens) -->
          <div class="col-xl-4 col-lg-5 col-md-7 d-flex flex-column mx-lg-0 mx-auto order-1 order-lg-2">
            <div class="card-plain card">
              <div class="card-header pb-0 text-start">
                <h4 class="font-weight-bolder">Sign In</h4>
                <p class="mb-0">Enter your email and password to sign in</p>
              </div>
              <div class="card-body">
                <form action="/auth/login" method="post">
                  <div class="mb-3">
                    <input type="text" class="form-control form-control-lg" id="emailid" name="emailid" placeholder="Email"
                      aria-label="Email">
                  </div>
                  <div class="mb-3 password-container">
                    <input type="password" class="form-control form-control-lg" id="password" name="password"
                      placeholder="Password" aria-label="Password">
                    <i class="far fa-eye" id="togglePassword"></i>
                  </div>
                  <div class="text-center">
                    <button type="submit" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0">Sign in</button>
                  </div>
                </form>
                <div class="text-center">
                  <p>Are you new? <a href="/registration">Sign up here</a></p>
                </div>
              </div>
            </div>
          </div>
          <!-- Left Side Design (Visible on larger screens) -->
          <div
            class="col-6 d-lg-flex d-none h-100 my-auto pe-0 position-absolute top-0 end-0 text-center justify-content-center flex-column">
            <div
              class="position-relative h-100 m-3 bg-gradient-primary  px-7 border-radius-lg d-flex flex-column justify-content-center overflow-hidden"
              style="background-color: #1e1e2d;">
              <div class="content-left">
                <h4 class="text-white font-weight-bolder mt-5">Welcome to Our Platform</h4>
                <p class="text-white">Join us to unlock the full potential of your business.</p>
                <img src="/assets/img/poslog.png" class="img-fluid rounded-5" alt="Custom Illustration">
              </div>
            </div>
          </div>


        </div>
      </div>
    </div>
  </section>
</main>
    <script>
    document.getElementById("login-form").addEventListener("submit", function(event) {
        event.preventDefault(); // Prevent the default form submission behavior.

        // Get the values entered in the "username" and "password" input fields.
        const username = document.getElementById("userid").value;
        const password = document.getElementById("password").value;

        if (username === "user123" && password === "pass@123") {
            // Redirect to the success page upon successful login.
            window.location.href = "/index";
        } else {
            // Display an error message if login is not successful.
            const errorMessage = document.getElementById("error-message");
         errorMessage.innerHTML = "Invalid username or password. Please try again." ;
         errorMessage.style.display = "block"; 
        }
    });
</script>
<script>
    document.getElementById('togglePassword').addEventListener('click', function (e) {
      const password = document.getElementById('password');
      const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
      password.setAttribute('type', type);
      this.classList.toggle('fa-eye-slash');
    });
  </script>