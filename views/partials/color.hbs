<script>
document.addEventListener('DOMContentLoaded', function() {
    const colorPicker = document.getElementById('colorPicker');

    if (!colorPicker) {
        console.error('Color picker element not found.');
    } else {
        colorPicker.addEventListener('change', function() {
            const color = colorPicker.value;
            console.log('Selected color:', color); 
            document.body.style.backgroundColor = color; 
        });
    }
});

function updateUserPreferences(darkModeEnabled) {
    document.body.classList.toggle('dark-version', darkModeEnabled);
    updateSidebarBackground(darkModeEnabled);
    localStorage.setItem('darkModeEnabled', darkModeEnabled);
    console.log('Updated local storage:', localStorage.getItem('darkModeEnabled'));
}

function updateSidebarBackground(darkModeEnabled) {
    const sidebar = document.getElementById('sidebar');
    if (sidebar) {
        sidebar.classList.toggle('dark-version', darkModeEnabled);
    }
}

function toggleDarkMode() {
    const darkModeEnabled = document.getElementById('dark-version').checked;
    const toggleIcon = document.getElementById('toggleIcon'); 
    if (darkModeEnabled) {
        toggleIcon.classList.remove('fa-sun'); 
        toggleIcon.classList.add('fa-moon'); 
    } else {
        toggleIcon.classList.remove('fa-moon'); 
        toggleIcon.classList.add('fa-sun'); 
    }
    updateUserPreferences(darkModeEnabled);
}


document.addEventListener('DOMContentLoaded', function () {
    const darkModeEnabled = localStorage.getItem('darkModeEnabled') === 'true';
    updateUserPreferences(darkModeEnabled);
    document.getElementById('dark-version').checked = darkModeEnabled;
    console.log('Loaded from local storage:', localStorage.getItem('darkModeEnabled'));
});

</script>
